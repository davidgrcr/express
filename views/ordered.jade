      .starter-template
        h1 Gracias por realizar su pedido
        h5 Id pedido: #{order._id}
        h5 Usuario: #{order.customer.username}
        h5 Pizza: #{order.pizza}
        h5 Estado del pedido: #{order.state}
        h5 Notificacion por email:
            if (order.email_on_ready)
                | Si
            else
                | No
        
          
